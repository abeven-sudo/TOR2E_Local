<li class="item weapon-draggable activable-item {{weapon.extraCss}}" data-item-id="{{weapon.id}}">
    <div class="skill-item-row flexrow">
        <div class="identification table-complex-column flexrow">
            <div class="flexrow">
                <img class="editor-toggle" src="{{weapon.img}}" title="{{weapon.name}}" height="32" width="32"
                     alt="{{localize 'tor2e.traits.details.tech.alt'}}"/>
                <a class="weapon-name"
                   title="{{localize 'tor2e.weapons.details.tech.alt' }}"
                   data-action-name="{{localize weapon.system.skill.label}}"
                   data-action-value="{{weapon.system.skill.value}}"
                   data-associate-attribute-name="strength"
                   data-action-favoured-name="system.skill.favoured.value"
                   data-action-favoured-value="{{weapon.system.skill.favoured.value}}">
                    <p>{{weapon.name}}</p>
                </a>
            </div>
        </div>
        <div class="stat-value">
            <p class="attribute-value">{{weapon.system.damage.value}}</p>
        </div>
        <div class="stat-value">
            <p class="attribute-value">{{weapon.system.injury.value}}</p>
        </div>
        <div class="stat-value">
            <p class="attribute-value">{{weapon.system.load.value}}</p>
        </div>
        <div class="stat-value">
            <div class="tor2e-round-checkbox big-check-box">
                <p class="toggle-equipped-state {{#if weapon.system.equipped.value}}active{{/if}}"
                   data-primary-attribute="system.equipped.value" data-secondary-attribute="system.dropped.value">
                    <span class="label"></span>
                </p>
            </div>
        </div>
        <div class="stat-value">
            <div class="tor2e-round-checkbox big-check-box">
                <p class="toggle-dropped-state {{#if weapon.system.dropped.value}}active{{/if}}"
                   data-primary-attribute="system.dropped.value" data-secondary-attribute="system.equipped.value">
                    <span class="label">
                    </span>
                </p>
            </div>
        </div>
        <div class="actions">
            <a class="item-edit action" title='{{localize "tor2e.sheet.skill.edit"}}'>
                <i class="fas fa-edit"></i>
            </a>
            <a class="item-delete action" title='{{localize "tor2e.sheet.skill.delete"}}'>
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
    <div class="flexcol editor-container-toggelable">
        <div class="flexcol">
            <div class="flexrow">
                <p class="table-caption">{{localize "tor2e.weapons.details.group"}}</p>
                {{#if custom.extendedWeaponSelection}}
                    <p class="table-caption">{{localize "tor2e.weapons.details.skill-name"}}</p>
                {{/if}}
                <p class="table-caption">{{localize "tor2e.weapons.details.notes"}}</p>
            </div>
            <div class="flexrow">
                <p class="attribute-value">{{weapon.group}}</p>
                {{#if custom.extendedWeaponSelection}}
                    <p class="attribute-value">{{weapon.system.skill.name}}</p>
                {{/if}}
                <p class="attribute-value">{{weapon.system.notes.value}}</p>
            </div>
        </div>
        {{#if custom.showHideRangeBlock}}
            {{#if weapon.system.ranged.value}}
                <div class="flexcol">
                    <div class="flexrow">
                        <p class="table-caption">{{localize weapon.system.ranged.short.label}}</p>
                        <p class="table-caption">{{localize weapon.system.ranged.medium.label}}</p>
                        <p class="table-caption">{{localize weapon.system.ranged.long.label}}</p>
                    </div>
                    <div class="flexrow">
                        <p class="attribute-value">{{weapon.system.ranged.short.value}} + {{localize
                                "tor2e.stats.strength"}}</p>
                        <p class="attribute-value">{{weapon.system.ranged.medium.value}}  + {{localize
                                "tor2e.stats.strength"}}</p>
                        <p class="attribute-value">{{weapon.system.ranged.long.value}}  + {{localize
                                "tor2e.stats.strength"}}</p>
                    </div>
                </div>
            {{/if}}
        {{/if}}
        <div>
            <div class="flexrow">
                <h3>{{localize 'tor2e.common.description'}}</h3>
                <div class="actions">
                    <a class="item-display" data-tooltip="tor2e.sheet.skill.chat">
                        <i class="fas fa-comments"></i>
                    </a>
                </div>
            </div>
            {{{weapon.description}}}
        </div>
    </div>
</li>
