<li class="trait-item item" data-item-id="{{id}}">
    <div class="skill-item-row flexrow">
        <div class="identification">
            <div class=" flexrow editor-toggle">
                <img src="{{img}}" title="{{name}}" height="32" width="32"
                     alt="{{localize 'tor2e.traits.details.tech.alt'}}"/>
                <p>{{name}}</p>
            </div>
        </div>
        <div class="actions">
            <a class="item-edit action" data-tooltip="tor2e.sheet.skill.edit">
                <i class="fas fa-edit"></i>
            </a>
            <a class="item-delete action" data-tooltip="tor2e.sheet.skill.delete">
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
    <div class="editor-container-toggelable">
        <div class="flexrow">
            <h3>{{localize 'tor2e.common.description'}}</h3>
            <div class="actions">
                <a class="item-display" data-tooltip="tor2e.sheet.skill.chat">
                    <i class="fas fa-comments"></i>
                </a>
            </div>
        </div>
        {{{description}}}
    </div>
</li>
